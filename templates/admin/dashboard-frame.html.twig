<div id="Tableau-de-bord" class="Tabcontent other">
    {% for message in app.flashes('danger') %}
        <div style="text-align:center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="content-inner">
        <h2 class="content-title">Tableau de bord</h2>
        <div class="boxes-iconifiers">
            <div class="box-m">
                <img src={{ asset('images/icon/folder.svg') }} alt="" onclick="demFi()">
                Demande de finance
            </div>
            <div class="box-m">
                <img src={{ asset('images/icon/card.svg') }} alt="" onclick="payFrac()">
                Paiement fractionn√©
            </div>
            <div class="box-m">
                <img src={{ asset('images/icon/file.svg') }} alt="" onclick="suiviDoss()">
                Suivi des dossiers
            </div>
        </div>
    </div>
    <script title="for the boxes">
        function demFi(){
            document.querySelector('#d').click();
        }
        function payFrac(){
            document.querySelector('#p').click();
        }
        function suiviDoss(){
            document.querySelector('#s').click();
        }
    </script>
</div>