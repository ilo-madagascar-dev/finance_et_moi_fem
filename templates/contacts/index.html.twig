{% extends 'base.html.twig' %}

{% block title %}Contactez-nous!!!{% endblock %}

{% block stylesheets %}
    <link href={{ asset('css/contact.css') }} rel="stylesheet">
    <meta name="viewport" content="widht=device-widht , initial-scale=1.0">
{% endblock %}

{% block body %}
    <link href={{ asset('css/stylesheet.css') }} rel="stylesheet">
    <link href={{ asset('css/colors.css') }} rel="stylesheet">

    {% block header %}
        {% include "mqbaka_home/header.html.twig" %}
    {% endblock %}

    <div class='main-content'>
        <div class='contact-content'>
            
            <div class="contact-content-2">
                <h2 class="h2"> Envoyé votre e-mail </h2>

                {{ form_start(contacts_form) }}
                    <div class="form-container">
                        <div class="form-groupe">
                            {{ form_widget(contacts_form.nom,
                                {
                                    'attr': 
                                        {
                                            'class': 'contact-input',
                                            'placeholder': 'nom'
                                        }
                                }) }}
                            {{ form_widget(contacts_form.prenom,
                                {
                                    'attr': 
                                        {
                                            'class': 'contact-input',
                                            'placeholder': 'prenom'
                                        }
                                }) }}
                        </div>
                        <div class="form-groupe-1">
                        {{ form_widget(contacts_form.adress,
                            {
                                'attr': 
                                    {
                                        'class': 'contact-input',
                                        'placeholder': 'Adresse'
                                    }
                            }) }}
                        {{ form_widget(contacts_form.ville,
                            {
                                'attr': 
                                    {
                                        'class': 'contact-input',
                                        'placeholder': 'Ville'
                                    }
                            }) }}
                        {{ form_widget(contacts_form.codePostal,
                            {
                                'attr': 
                                    {
                                        'class': 'contact-input',
                                        'placeholder': 'Code postal'
                                    }
                            }) }}
                        </div>

                        <div class="form-groupe">
                            {{ form_widget(contacts_form.phone,
                                {
                                    'attr': 
                                        {
                                            'class': 'contact-input',
                                            'placeholder': 'Telephone'
                                        }
                                }) }}
                            {{ form_widget(contacts_form.adressEmail,
                                {
                                    'attr': 
                                        {
                                            'class': 'contact-input',
                                            'placeholder': 'Adresse email'
                                        }
                                }) }}
                        </div>
                        
                        {{ form_widget(contacts_form.message,
                            {
                                'attr': 
                                    {
                                        'class': 'contact-input',
                                        'placeholder': 'Votre message'
                                    }
                            }) }}
                    </div>
                    <button class="contact_submit" type="submit">Envoyé <img src="images/send.svg" class="fuse" alt="fusé"></button>
                {{ form_end(contacts_form) }}
            </div>
            
        </div>
        <div class='contact-content-2'>
            <img src="images/22.png" class="sary22" alt="contact_image">
        </div>
    </div>

    {% include "mqbaka_home/footer.html.twig" %}
{% endblock %}
