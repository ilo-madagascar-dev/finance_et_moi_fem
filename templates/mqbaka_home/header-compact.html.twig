<script title="menu toggler 1200px and lower">
    let ham= document.querySelector('.hamburger');
    let cro= document.querySelector('.cross');

    let container= document.querySelector('.menu-list');
    let menu= document.querySelector('.nav-list');

    function showMenuList(){
        menu.classList.remove('mob-thing');
        container.classList.add('cro');
        container.classList.remove('ham');
    }

    function hideMenuList(){
        menu.classList.add('mob-thing');
        container.classList.add('ham');
        container.classList.remove('cro');
    }

    ham.addEventListener('click', showMenuList);
    cro.addEventListener('click', hideMenuList);

</script>