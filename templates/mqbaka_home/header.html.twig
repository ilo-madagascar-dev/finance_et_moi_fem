<script title="the one that shrinks the header">
    let top__bar= document.querySelector('.header-top-bar');
    let header= document.querySelector('.header');

    const scroller= function(event){
        console.log(window.scrollY);
        console.log(header.offsetHeight);
        if(window.scrollY> header.offsetHeight){
            top__bar.classList.add('shrinked');
        } else {
            top__bar.classList.remove('shrinked');
        }
    }

    document.addEventListener('scroll', scroller);
</script>
