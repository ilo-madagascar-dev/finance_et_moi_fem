{% extends 'base.html.twig' %}

{% block title %}FEM - Paiement fractionné{% endblock %}

{% block stylesheets %}
    {# <link href="stylesheets/fonts/stylesheet-01.css" rel="text/css"/> #}
    <link href={{ asset('css/stylesheet.css') }} rel="stylesheet">
    <link href={{ asset('css/colors.css') }} rel="stylesheet">
    <link href={{ asset('css/credit_conso.css') }} rel="stylesheet">
    <link href={{ asset('css/payement-frac-add.css') }} rel="stylesheet">
    {% block addstyle %}
    {% endblock %}
{% endblock %}

{% block body %}

{% block header %}
{% include "mqbaka_home/header.html.twig" %}
{% endblock %}

<div class="undestand-title">
    <button class="full-blue dark">Notre produit</button>
    <h3 class="undest-title line">
        Proposer du financement n'a jamais été aussi simple !
    </h3>
</div>

<div class="boxes">
    <div class="boxes-inner">
        <div class="box">
            <img src={{ asset('images/icon/icon/1.png') }} alt="">
            <div class="box-title">Paiement en 4 et 10 fois</div>
            <div class="box-p">
                Financez des montants de 200 à 3 000 € en 10x et de 50 à 6 000 € en 4x
            </div>
        </div>
        <div class="box">
            <img src={{ asset('images/icon/icon/2.png') }} alt="">
            <div class="box-title">Avance de trésorerie</div>
            <div class="box-p">
                Recevez le montant total de la commande à partir de 72h suivant l’achat
            </div>
        </div>
        <div class="box">
            <img src={{ asset('images/icon/icon/Groupe2.png') }} alt="">
            <div class="box-title">Règlement Multicanal</div>
            <div class="box-p">
                Vente à distance ? Envoyez la demande de paiement directement sur le mobile de votre client 
            </div>
        </div>
        <div class="box">
            <img src={{ asset('images/icon/icon/Groupe1.png') }} alt="">
            <div class="box-title">Instantanée </div>
            <div class="box-p">
                Pré-acceptation et paiement en quelques secondes 
            </div>
        </div>
        <div class="box" one>
            <img src={{ asset('images/icon/icon/Groupe3.png') }} alt="">
            <div class="box-title">100% en ligne</div>
            <div class="box-p">
                Plus besoin de TPE. Tout se fait depuis votre interface ou à distance depuis le mobile du client
            </div>
        </div>
    </div>
    <button class="full-blue" onclick="goto__link()">Je m'abonne</button>
    <a href={{ path("registration") }} class="invisible" id="l___">Redister</a>
</div>

<div class="undestand">
    <div class="undestand-title">
        <h3 class="undest-title" style="text-transform: uppercase">
            les modalités
        </h3>
        <h3 class="undest-title">
            Vous êtes prêts à ravir vos clients ?
        </h3>
    </div>
    <div class="undestand-table">
        <table class="und-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Payement en 4X</th>
                    <th>Payement en 10X</th>
                </tr>
            </thead>
            <tbody>
                <tr id='f-row'>
                    <td>Condition d'accès</td>
                    <td>Plus d'un an d'activité</td>
                    <td>Plus d'un an d'activité</td>
                </tr>
                <tr>
                    <td>Montants financés</td>
                    <td>50 à 6000€</td>
                    <td>50 à 6000€</td>
                </tr>
                <tr>
                    <td>Frais</td>
                    <td>
                        <div class="bol">Vendeur</div>
                        <div class="corres">
                            2,2% du montant financé
                        </div>
                        <div class="bol">Client</div>
                        <div class="corres">
                            1,33% à 2,41%<strong>*</strong> du montant financé
                        </div>
                        
                        <div class="noticer">
                            *Ref.tableau tarification client
                        </div>
                        <div class="corres">
                            Le vendeur peut proposer du 4x gratuit<br/>en prenant en charge les frais clients
                        </div>
                    </td>
                    <td>
                        <div class="bol">Vendeur</div>
                        <div class="corres">
                            Gratuit
                        </div>
                        <div class="bol">Client</div>
                        <div class="corres">
                            4,8% du montant financé
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Acceptation</td>
                    <td>Instantanée</td>
                    <td>Instantanée</td>
                </tr>
                <tr>
                    <td>Pièce justificative</td>
                    <td>Aucune pièce justificative</td>
                    <td>Pièce d'identité</td>
                </tr>
                <tr>
                    <td>Règlement de la commande</td>
                    <td>
                        <div class="bol">Vendeur</div>
                        <div class="corres">
                            Virement du montant total de la commande<br/>sur votre compte à J+4
                        </div>
                        <div class="bol">Client</div>
                        <div class="corres">
                            Paiement de la 1ère mensualité au moment<br/>de l’achat puis 3 mensualités
                        </div>
                    </td>
                    <td>
                        <div class="bol">Vendeur</div>
                        <div class="corres">
                            Virement du montant total de la commande<br/>sur votre compte à J+7
                        </div>
                        <div class="bol">Client</div>
                        <div class="corres">
                            Paiement de la 1ère mensualité au moment<br/>de l’achat puis 9 mensualités
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Multicanal</td>
                    <td colspan="2">
                        Réalisation du financement dans le point de vente<br/>
                        Réalisation du financement à distance sur site FEM, tablette ou mobile 
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>

<div class="how_done">
    <div class="ilany">
        <div class="tarification">
            <h3 class="undest-title">
                Tarification client paiement 4x
            </h3>
            <div class="m-tarif">
                <table class="m-tarif-t">
                    <thead>
                        <tr>
                            <th>Montant de la commande</th>
                            <th>Frais négociables</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>50 à 1000€</td>
                            <td>2.41%</td>
                        </tr>
                        <tr>
                            <td>1000,01 à 1500€</td>
                            <td>2,35%</td>
                        </tr>
                        <tr>
                            <td>1 500,01 à 2 000€</td>
                            <td>2,20%</td>
                        </tr>
                        <tr>
                            <td>2 000,01 à 3 000€</td>
                            <td>1,90%</td>
                        </tr>
                        <tr>
                            <td>3 000,01 à 6 000€</td>
                            <td>1,33%</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="advantages">
            <h4 class="">AVANTAGES</h4>
            <p class="sub">Les raisons de dire oui</p>
            <div class="check-list">
                <ul class="check-lister">
                    <li class="list-item">Augmentez vos marges avec les commissions</li>
                    <li class="list-item">Gagnez du temps grâce à la prise en charge client</li>
                    <li class="list-item">Sécurisez vos ventes en un temps record</li>
                    <li class="list-item">Accélérez vos délais de vente</li>
                    <li class="list-item">Complétez votre offre de solutions de financement</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="ilany slanted-box">
        <div class="slanted-inner">
            <h3 class="slanted-title">
                Comment ça marche&nbsp;?
            </h3>
            <div class="steps">
                <div class="step-number">1</div>
                <div class="step-label">Renseignez les coordonnées du client</div>
                <div class="step-number">2</div>
                <div class="step-label">Il complète ses informations en quelques secondes</div>
                <div class="step-number">3</div>
                <div class="step-label">Le client obtient une réponse instantanée
                </div>
            </div>
            <div class="blue-shape-thing"></div>
        </div>
    </div>
</div>

<script title="for the register link">
    let link= document.querySelector('#l___');
    function goto__link() {
        link.click();
    }
</script>

{% block footer %}
{% include "mqbaka_home/footer.html.twig" %}
{% endblock %}


{% endblock %}