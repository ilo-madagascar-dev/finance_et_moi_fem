{% extends 'base.html.twig' %}

{% block title %}Finance et moi -- stuff{% endblock %}
{% block stylesheets %}
<link href={{ asset('css/stylesheet.css') }} rel="stylesheet">
<link href={{ asset('css/colors.css') }} rel="stylesheet">
<link href={{ asset('css/reset.css') }} rel="stylesheet">
{% endblock %}


{% block body %}

    {% block header %}
        {% include "mqbaka_home/header-compact.html.twig" %}
    {% endblock %}
    <div class="content">
        <img src={{ asset("images/favicon.png") }} alt="logo">
        {% block modal %}
            <div class="reset-modal">
                <h3 class="reset-title">Récuperation de compte</h3>
                <h5 class="explain">Entrez votre nouveau mot de passe</h5>
                {{ form_start(resetForm) }}
                    <div class="inputs-re">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>
    
                    <p class="further-ex">
                        S'il ne s'agit pas de votre ordinateur, utilisez une fenêtre de navigation privée pour vous connecter.
                    </p>
                    <div class="buttons__">
                        <a href={{ path("registration") }} class="link__to__register">Créer un compte</a>
                        <button class="valid-btn">Valider</button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        {% endblock %}
    </div>


{% endblock %}